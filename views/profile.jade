extends layout

block content
	div.container
		div(class='page-header text-center')
			h1
				span.fa.fa-anchor 
				| Profile Page
			a(href='/logout', class='btn btn-default btn-sm') Logout
			

		div.row
			div.col-sm-6
				div.well
					h3
						span.fa.fa-user 
						| Local
					p
						strong id
						| : #{user._id}
						br
						strong email
						| : #{user.local.email}
						br
						strong password
						| : #{user.local.password}